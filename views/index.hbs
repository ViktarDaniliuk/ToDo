<h2>{{title}}</h2>

{{#if todos.length}}
   <ul class="collection">
      {{#each todos}}
         <li class="todo collection-item">
            <label>
               {{#if completed}}
                  <input type="checkbox" checked />
                  <span class="completed">{{title}}</span>
               {{else}}
                  <input type="checkbox" />
                  <span>{{title}}</span>
               {{/if}}
               <button class="btn btn-small">Save</button>
            </label>
         </li>
      {{/each}}
   </ul>
{{else}}
   <p>No todos</p>
{{/if}}